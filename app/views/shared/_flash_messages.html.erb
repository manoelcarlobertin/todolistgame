<%# Este partial itera sobre todas as mensagens flash (notice, alert, etc.) %>
<% flash.each do |type, message| %>
  <% # Define a cor com base no tipo da mensagem para o TailwindCSS case type when 'notice'
    color_classes="bg-green-100 border-green-400 text-green-700" when 'alert'
    color_classes="bg-red-100 border-red-400 text-red-700" else
    color_classes="bg-gray-100 border-gray-400 text-gray-700" end %>
    <div class="<%= color_classes %> border px-4 py-3 rounded-md relative mb-4" role="alert">
      <span class="block sm:inline">
        <%= message %>
      </span>
    </div>
<% end %>